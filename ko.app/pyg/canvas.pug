doctype html
html lang="en"
    head
        title canvas
        meta charset="utf-8"
        link rel="stylesheet" href="./css/style.css" type="text/css"
        link rel="stylesheet" href="./css/dark.css"  type="text/css"
        styl
            titlebarHeight        = 30px
            
            fill-xy()
                position            absolute
                left                0
                right               0
                top                 0
                bottom              0
            
            center-xy()
                position            absolute
                left                50%
                top                 50%
                transform           translate(-50%, -50%)
            
            border(c)
                box-sizing          border-box
                border              1px solid c
                
            .fps
                position            absolute
                top                 0
                right               0
                
            #main
                overflow            hidden
                background-color    #000
                font-family         fontMono
                font-size           14px
                
            #title
                color               #aaa
                font-family         fontMono
                
            #world
                width               100%
                height              100%
                position            relative
                overflow            hidden
                
            .valgrid
                width               fit-content
                background          #888
                display             flex
                flex-direction      column
                position            relative
                z-index             1
                
            .valgrid-row
                display             flex
                white-space         nowrap
                
            .valgrid-cell
                flex                0 0 10px
                display             inline-block
                min-width           10px
                min-height          10px
                padding             4px
                
            .valgrid-header
                flex                0 0 18px
                border-radius       9px
                display             inline-block
                min-width           18px
                min-height          18px
            
            .tweaky
                width               fit-content
                background          #000
                position            relative
                z-index             1
            
            .tweaky-row
                display             flex
                flex-flow           row wrap
                white-space         nowrap
                
            .tweaky-name
                width               100px
                color               #888
                
            .tweaky-slider
                appearance          none
                background          #444
                border-radius       14px
                width               200px
                height              18px
                
            .tweaky-value
                background          transparent
                color               #fff
                appearance          textfield
                font-family         fontMono
                font-size           14px
                width               80px
                text-align          right
                                
            .tweaky-input
                display             inline-block
                
            .canvas
                pointer-events      none
                fill-xy()
            
            .quiq
            
                flex                0 1
                display             inline-block
                box-sizing          border-box
                font-size           24px
                font-family         fontMono
            
            .quiq-item
            
                height              titlebarHeight - 0.5px
                width               titlebarHeight * 1.25
                box-sizing          border-box
                display             inline-block
                text-align          center
                vertical-align      top
                cursor              pointer
                color               #666
                
                &:active
                    padding-top     2px
                
            ::-webkit-scrollbar-corner
                background-color        transparent
            
            ::-webkit-scrollbar-thumb
                background-color        #f80
                
            ::-webkit-scrollbar-thumb:hover
                background-color        #88f
                
            ::-webkit-inner-spin-button
                  appearance        none
                  margin            0
                  
            ::-webkit-outer-spin-button
                  appearance        none
                  margin            0
            
    body
        #titlebar
        #main tabindex=0
    
    script type="module" src="./canvas/canvas.js"
    